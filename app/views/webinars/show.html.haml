- model_class = Webinar
.page-header
  %h1=t '.title', :default => @webinar.name
%p
  %strong Тема: 
  = @webinar.theme.name
= image_tag(@webinar.photo.url(:medium))
= rating_for @webinar, 'popularity',cancel: true, cancel_place: :left
%br
%br
= link_to t('.back', :default => t("helpers.links.back")), webinars_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_webinar_path(@webinar), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), webinar_path(@webinar), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
